  const LocalData = () => {
  const [local, setLocal] = useState([])
    useEffect(() => {
        const notesData = JSON.parse(localStorage.getItem('local'))
        if(notesData) {
            setLocal(notesData)
        }
    },[])

    useEffect(()=> {
        localStorage.setItem('local', JSON.stringify(local))
    }, [local])
}   
