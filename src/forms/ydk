 const onSubmit = (data) => { 
  console.log(data)
  //e.preventDefault();

   fetch('http://localhost:3000/donationform', {
      method: 'POST',
      headers: {"Content-Type": "application/json"},
      body: JSON.stringify(data)
    })
    .then(res => res.json())
    .then(() => {
      console.log('Donation Form Data Posted')
    })

}
  

